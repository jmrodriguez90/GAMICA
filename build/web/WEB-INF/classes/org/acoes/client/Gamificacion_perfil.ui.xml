<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
    
    <ui:style>
        .label{
        margin: 24px;
        }
    </ui:style>
    <g:HTMLPanel>        
        <m:MaterialContainer>
            <m:MaterialRow>
                <m:MaterialRow>
                    <m:MaterialColumn grid="l12">                        
                    </m:MaterialColumn>
                </m:MaterialRow>
                
                <m:MaterialRow>
                    <m:MaterialColumn grid="l3 m3 s3">
                        <m:MaterialCard backgroundColor="blue-grey darken-1">
                            <m:MaterialCardContent textColor="white">
                                <m:MaterialCardTitle text="GamiCategorías de jjramos" iconType="POLYMER" iconPosition="RIGHT"/>
                                <m:MaterialLabel text="Enhorabuena! Estás muy cerca del final del juego." />
                            </m:MaterialCardContent>
                            <m:MaterialCardAction>
                                <m:MaterialLink ui:field="puntuacion" text="Puntos" iconType="FAVORITE"/>
                                <m:MaterialLink ui:field="medallas" text="Medallas" iconType="BOOKMARK_BORDER"/>
                            </m:MaterialCardAction>
                        </m:MaterialCard>
                    </m:MaterialColumn>
                </m:MaterialRow>
                
            </m:MaterialRow>
            
            
        </m:MaterialContainer>
    </g:HTMLPanel>
</ui:UiBinder>